{
    "name": "nginx_unicorn",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "description": "Using the Nginx web server",
    
    "override_attributes": {
    	"nginx": {
		    "version": "1.4.4",
		    "dir": "/etc/nginx",
		    "binary": "/etc/nginx-1.4.4/sbin",
		    "user": "deploy",
		    "modules": [
		      	"http_stub_status_module",
	            "http_ssl_module",
	            "http_gzip_static_module"
            ]
		}
    },

    "run_list": [
    	// "recipe[nginx::passenger]",
       	"recipe[nginx]"
    ]
}