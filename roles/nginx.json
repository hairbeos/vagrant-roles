{
    "name": "nginx",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "description": "Using the Nginx web server",
    
    "override_attributes": {
    	"nginx": {
		    "version": "1.4.4",
		    "user": "deploy",
		    "init_style": "init",
		    "modules": [
		      	"http_stub_status_module",
	            "http_ssl_module",
	            "http_gzip_static_module",
	            "passenger"
		    ],
		    "passenger": {
		      	"version": "4.0.37",
		      	"root": "/usr/local/rvm/gems/ruby-2.0.0-p353/gems/passenger-4.0.37",
		      	"gem_binary": "/usr/local/rvm/rubies/ruby-2.0.0-p353/bin/gem"
		    },
		    "source": {
		    	"use_existing_user": true
		    },
		    "configure_flags": [
		      	"--add-module=/usr/local/rvm/gems/ruby-2.0.0-p353/gems/passenger-4.0.37/ext/nginx"
		    ]
		    // "gzip_types": [
		    // 	"text/plain",
		    //   	"text/html",
		    //   	"text/css",
		    //   	"text/xml",
		    //   	"text/javascript",
		    //   	"application/json",
		    //   	"application/x-javascript",
		    //   	"application/xml",
		    //   	"application/xml+rss"
		    // ]
		}
    },

    "run_list": [
       "recipe[nginx::source]",
       "recipe[nginx::passenger]"
    ]
}